<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tomas.wisrandroid.Fragments.QuestionListFragment"
    android:tag="QuestionListTag">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="28sp"
                android:id="@+id/questionlistfragment_textview"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="7" />

            <ImageButton
                android:id="@+id/ask_question_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_weight="3"
                android:src="@drawable/askquestion"
                style="?android:attr/buttonBarStyle"/>
        </LinearLayout>

        <ListView
            android:id="@+id/question_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</FrameLayout>
