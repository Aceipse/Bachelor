<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:weightSum="10">
        <TextView
            android:textColor="@color/primary_material_light"
            android:id="@+id/question_row_textview"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="7"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/thumb_up"
                android:textColor="@color/primary_material_light"
                android:id="@+id/question_row_thumbs_up_imageview"
                android:layout_width="fill_parent"
                android:layout_height="15dp"/>
            <TextView
                android:text="0"
                android:id="@+id/question_row_thumbs_up_textview"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/thumb_down"
                android:textColor="@color/primary_material_light"
                android:id="@+id/question_row_thumbs_down_imageview"
                android:layout_width="fill_parent"
                android:layout_height="15dp"/>
            <TextView
                android:text="0"
                android:id="@+id/question_row_thumbs_down_textview"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>